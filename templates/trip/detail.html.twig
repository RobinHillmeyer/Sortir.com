{% extends 'base.html.twig' %}

{% block body %}

    <h2>Afficher</h2>
    <div class="trip_container">
        <p>Nom de la Sortie : {{ trip.name }}</p>
        <p>Date et heure de la sortie : {{ trip.startDateTime | date('d-m-Y H:i') }}</p>
        <p>Date limite d'inscription : {{ trip.registrationDeadLine | date('d-m-Y') }}</p>
        <p>Nombre de places : {{ trip.registrationNumberMax }}</p>
        <p>Dur√©e : {{ trip.duration }} minutes</p>
        <p>Description : {{ trip.information }}</p>
        <p>Etat : {{ trip.state.wording }}</p>
        <p>Campus : {{ trip.campus.name }}</p>
        <p>Lieu : {{ trip.spot.name }}</p>
        <p>Rue : {{ trip.spot.street }}</p>
        <p>Code postal : {{ trip.spot.city.zipCode }}</p>
        <p>Latitude : {{ trip.spot.latitude }}</p>
        <p>Longitude : {{ trip.spot.longitude }}</p>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Pseudo</th>
            <th scope="col">Nom</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_profile', {'name': user.name}) }}">{{ user.nickname }}</a></td>
                <td>{{ user.firstname }} {{ user.name | upper }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}
    Detail de la Sortie
{% endblock %}