{% extends 'base.html.twig' %}

{% block title %}
Sortie Annulée
{% endblock %}

{% block body %}
    <h2>Sortie Annulée</h2>
    <p>Nom de la sortie : {{ trip.name }}</p>
    <p>Date de la sortie : {{ trip.startDateTime | date('d-m-Y') }}</p>
